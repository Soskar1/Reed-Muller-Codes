<Window x:Class="CodingTheory.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CodingTheory.Presentation"
        Title="MainWindow" Height="450" Width="800">
    <TabControl ItemsSource="{Binding Tabs}">
        <TabControl.Resources>
            <DataTemplate DataType="{x:Type local:FirstScenarioTabViewModel}">
                <local:FirstScenarioTabView />
            </DataTemplate>
        </TabControl.Resources>
        <TabControl.ItemTemplate>
            <DataTemplate DataType="{x:Type local:TabViewModelBase}">
                <TextBlock Text="{Binding Title}" />
            </DataTemplate>
        </TabControl.ItemTemplate>
    </TabControl>
</Window>