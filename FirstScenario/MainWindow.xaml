<Window x:Class="CodingTheory.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingTheory.Presentation"
        mc:Ignorable="d"
        Title="First Scenario" Height="300" Width="1000">
    <StackPanel>
        <Label Content="Reed Muller Codes R(1, m)" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>

        <Grid Margin="15,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Parameters" FontWeight="Bold" FontSize="18" Width="150" HorizontalAlignment="Left"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Parameter M" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="mParameter" Grid.Row="2" Grid.Column="0" Width="100" HorizontalAlignment="Left" />

            <Label Grid.Row="1" Grid.Column="1" Content="Channel distortion probability"/>
            <TextBox x:Name="probabilityParameter" Grid.Row="2" Grid.Column="1" Width="100" HorizontalAlignment="Left"/>
        </Grid>

        <Label Content="Vector encoding/decoding" Margin="15" FontWeight="Bold" FontSize="18"/>

        <Grid Margin="15,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="28*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="28*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="28*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Vector" />
            <TextBox x:Name="inputVector" Grid.Column="0" Grid.Row="1"/>
            <Label x:Name="inputVectorErrorLabel" Grid.Row="2" Grid.Column="0" Content="" Foreground="Red"/>

            <Button Grid.Row="1" Grid.Column="1" Content="Encode" Click="Encode_Click"/>

            <Label Grid.Row="0" Grid.Column="2" Content="Encoded Vector" />
            <TextBox x:Name="encodingResult" Grid.Row="1" Grid.Column="2" IsReadOnly="True" />

            <Button x:Name="channelButton" Grid.Row="1" Grid.Column="3" Content="Channel" IsEnabled="False" Click="channelButton_Click" />

            <Label Grid.Row="0" Grid.Column="4" Content="Distorted Vector" />
            <TextBox x:Name="distortedVectorTextBox" Grid.Row="1" Grid.Column="4" TextChanged="DistortedVectorTextChanged"/>
            <Label x:Name="nErrorsLabel" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="4" Margin="54,0,0,0" HorizontalAlignment="Left"/>

            <Button x:Name="decodeButton" Grid.Row="1" Grid.Column="5" Content="Decode" IsEnabled="False" Click="decodeButton_Click" />

            <Label Grid.Row="0" Grid.Column="6" Content="Result Vector" />
            <TextBox x:Name="resultVectorTextBox" Grid.Row="1" Grid.Column="6" IsReadOnly="True" />
        </Grid>
    </StackPanel>
</Window>
