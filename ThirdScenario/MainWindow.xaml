<Window x:Class="CodingTheory.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingTheory.Presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="121*"/>
        </Grid.RowDefinitions>

        <Label Content="Image encoding + decoding" HorizontalAlignment="Center" FontSize="22" Width="300" HorizontalContentAlignment="Center"/>

        <Grid Grid.Row="1" Margin="0,7,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="33, 60, 0, 0">
                    <Button Content="Select image" Click="SelectImageClick"/>
                    <Label x:Name="fileNameLabel" Content="" HorizontalAlignment="Center" Width="130"/>
                </StackPanel>
                <Image x:Name="imageInput" Width="200" Height="200" Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Label Content="M parameter" HorizontalAlignment="Center" Margin="0, 100, 0, 0"/>
                <TextBox x:Name="mInput" Width="100"/>
                <Label Content="Error probability" HorizontalAlignment="Center" />
                <TextBox x:Name="probabilityInput" Width="100"/>
                <Button Width="120" Height="50" Content="Show result" Margin="0, 10, 0, 0" Click="Button_Click" />
                <Label x:Name="errorDisplayLabel" HorizontalAlignment="Center" Foreground="Red"/>
            </StackPanel>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Label Content="Without Reed Muller codes usage" HorizontalAlignment="Center"/>
                    <Image x:Name="withoutAlgorithmImage" Width="145" Height="145" Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Label Content="With Reed Muller codes" HorizontalAlignment="Center"/>
                    <Image x:Name="withAlgorithmImage" Width="145" Height="145" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
